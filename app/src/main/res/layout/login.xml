<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#000000"
        fancy:fb_borderWidth="2dp"
        fancy:fb_defaultColor="#3b5998"
        fancy:fb_focusColor="#3b5998"
        fancy:fb_fontIconResource="&#xf09a;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        fancy:fb_text="Log in with Facebook"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        app:fb_textColor="#000000"
        fancy:fb_defaultColor="@color/white"
        app:fb_borderColor="#000000"
        app:fb_borderWidth="2dp"
        fancy:fb_focusColor="@color/white"
        fancy:fb_fontIconResource="&#xf0d5;"
        fancy:fb_iconResource=""
        fancy:fb_iconPosition="left"
        fancy:fb_radius="5dp"
        fancy:fb_text="Log in with Google"
        android:layout_below="@+id/btn_fb"
        android:layout_marginTop="22dp"
        android:layout_alignEnd="@+id/btn_fb"
        android:layout_alignStart="@+id/btn_fb" />
</RelativeLayout>