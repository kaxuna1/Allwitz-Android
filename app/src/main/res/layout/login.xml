<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:src="@drawable/profile_logo"
            android:layout_height="96dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:mtf_image="@drawable/maillogo"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/emailfieldmaterial"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="#333"
                android:textColorHint="#666"
                android:textSize="15sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>
        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:mtf_image="@drawable/passlog"
            app:layout_constraintTop_toBottomOf="@+id/emailfieldmaterial"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:id="@+id/passwordfieldmaterial"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColor="#333"
                android:textColorHint="#666"
                android:textSize="15sp" />

        </com.github.florent37.materialtextfield.MaterialTextField>
        <info.hoang8f.widget.FButton
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:drawablePadding="0dp"
            android:minHeight="60dp"
            android:minWidth="300dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingTop="-5dp"
            android:text="Login"
            android:textColor="@android:color/white"
            fbutton:cornerRadius="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordfieldmaterial"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/loginButton"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/googleLogin"
                android:layout_width="145dp"
                android:layout_height="60dp"
                app:fb_defaultColor="#db4437"
                app:fb_focusColor="#db4400"
                app:fb_fontIconResource="&#xf0d5;"
                app:fb_fontIconSize="20sp"
                app:fb_iconPaddingLeft="12dp"

                app:fb_iconPosition="left"
                app:fb_radius="5dp"
                app:fb_text="Google"
                app:fb_textColor="#ffffff"
                app:fb_textSize="16sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/f_twitter_button">

            </mehdi.sakout.fancybuttons.FancyButton>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/facebook_login"
                android:layout_width="145dp"
                android:layout_marginStart="10dp"
                android:layout_height="60dp"
                app:fb_defaultColor="#39579B"
                app:fb_focusColor="#6183d2"
                app:fb_fontIconResource="&#xf230;"
                app:fb_fontIconSize="20sp"
                app:fb_iconPaddingLeft="10dp"
                app:fb_iconPosition="left"
                app:fb_radius="5dp"
                app:fb_text="Facebook"
                app:fb_textColor="#ffffff"
                app:fb_textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/f_twitter_button"
                fbutton:layout_editor_absoluteX="63dp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>