<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DB2E2D"
    app:theme="@style/AppTheme"
    android:scaleType="fitCenter"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">


    <Button
        android:id="@+id/classBtnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/corner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.519"
        app:layout_constraintRight_toLeftOf="@+id/cityBtnSearch"
        android:layout_marginRight="0dp" />
    <Button
        android:background="@drawable/btncenter"
        android:id="@+id/cityBtnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.519" />
    <Button

        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/cityBtnSearch"
        android:layout_marginLeft="0dp"
        android:background="@drawable/btnright"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.519" />

    <TextView
        android:id="@+id/iwant"
        android:layout_width="wrap_content"
        android:textSize="62dp"
        android:textColor="#46c3bf"

        android:layout_height="wrap_content"
        fontPath="fonts/bold.otf"
        android:text="I WANT"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/cityBtnSearch"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tolearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO LEARN"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cityBtnSearch"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/allwitz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allwitz"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>